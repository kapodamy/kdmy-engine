{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug in Chrome",
            "file": "${workspaceFolder}/kdmy_engine.html",
            "disableNetworkCache": true,
            "userDataDir": false,
            "runtimeArgs": ["--remote-debugging-port=9222", "--allow-file-access-from-files"],
            "cleanUp": "onlyTab",
            "timeout": 20000
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug in Opera",
            "runtimeExecutable": "C:/Program Files (x86)/Opera Next/launcher.exe",
            "file": "${workspaceFolder}/kdmy_engine.html",
            "disableNetworkCache": true,
            "userDataDir": false,
            "runtimeArgs": ["--remote-debugging-port=9222", "--allow-file-access-from-files"],
            "cleanUp": "onlyTab",
            "timeout": 20000
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug in Opera [layout visor]",
            "runtimeExecutable": "C:/Program Files (x86)/Opera Next/launcher.exe",
            "file": "${workspaceFolder}/kdmy_engine_layout_visor.html",
            "disableNetworkCache": true,
            "userDataDir": false,
            "runtimeArgs": ["--remote-debugging-port=9222", "--allow-file-access-from-files"],
            "cleanUp": "onlyTab",
            "timeout": 20000
        }
    ]
}