{
    "name": "BOYFRIEND",
    "model": "/assets/common/image/funkin/BOYFRIEND.xml",
    "weekSelectorModel": "/assets/common/image/funkin/boyfriend_preview.xml",
    "weekSelectorEnableBeat": true,
    "healthbarColor": "0x00FF00",
    "healthIconsModel": "/assets/common/image/funkin/icon-bf.xml",

    "actionsApplyChartSpeed": false,
    "singAlternateSuffix": null,
    "continuousIdle": false,
    "offsetX": 0,
    "offsetY": 0,
    "alignVertical": "end",
    "alignHorizontal": "start",
    "referenceSize": { "width": -1, "height": -1 },
    "leftFacing": true, 
    "oppositeDirections": {
        "from": ["left", "right"],
        "to": ["right", "left"]
    },

    "actions": {

        "sing": [
            { "direction": "left",   "anim": "BF NOTE LEFT",  "rollback": true },
            { "direction": "down",   "anim": "BF NOTE DOWN",  "rollback": true },
            { "direction": "up",     "anim": "BF NOTE UP",    "rollback": true },
            { "direction": "right",  "anim": "BF NOTE RIGHT", "rollback": true }
        ],

        "miss": [
            { "direction": "left",   "anim": "BF NOTE LEFT MISS"    },
            { "direction": "down",   "anim": "BF NOTE DOWN MISS"    },
            { "direction": "up",     "anim": "BF NOTE UP MISS"      },
            { "direction": "right",  "anim": "BF NOTE RIGHT MISS"   }
        ],

        "idle": { "anim": "BF idle dance" },
        "hey": {  "anim": "BF HEY!!"      },

        "extras": [
            { "name": "shaking",            "anim": "BF idle shaking",   "stopAfterBeats": 1        },
            { "name": "shaking-continuous", "animHold": "BF idle shaking"                           },
            { "name": "dodge",              "anim": "boyfriend dodge",                              },
            { "name": "pre-attack",         "anim": "bf pre attack",                                },
            { "name": "attack",             "anim": "boyfriend attack",                             },
            { "name": "hit",                "anim": "BF hit",                                       },
            { "name": "dies",               "anim": "BF dies",           "animHold": "BF Dead Loop" },
            { "name": "retry",              "anim": "BF Dead confirm",                              },
            { "name": "giveup",             "anim": "BF Dead Loop",                                 },
            { "name": "static-idle",        "anim": "BF idle dance",                                }
        ]
    }
}

