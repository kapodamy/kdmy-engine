{
    "name": "BOYFRIEND",
    "model": "/assets/common/image/funkin/BOYFRIEND.xml",
    "modelWeekSelector": "/assets/common/image/funkin/boyfriend_preview.xml",
    "weekSelectorEnableBeat": true,
    "healthbarColor": "0x00FF00",
    "healthIconsModel": "/assets/common/image/funkin/icon-bf.xml",

    "actionsApplyChartSpeed": false,
    "singAlternateSuffix": null,
    "continuousIdle": false,
    "offsetX": 0,
    "offsetY": 0,
    "alignVertical": "end",
    "alignHorizontal": "start",
    "referenceSize": { "width": -1, "height": -1 },
    "leftFacing": true, 
    "oppositeDirections": {
        "from": ["left", "right"],
        "to": ["right", "left"]
    },

    "actions": {

        "sing": [
            { "direction": "left",   "anim": "BF NOTE LEFT",  "animHold": null, "animRollback": null, "rollback": true, "followHold": false, "fullSustain": false },
            { "direction": "down",   "anim": "BF NOTE DOWN",  "animHold": null, "animRollback": null, "rollback": true, "followHold": false, "fullSustain": false },
            { "direction": "up",     "anim": "BF NOTE UP",    "animHold": null, "animRollback": null, "rollback": true, "followHold": false, "fullSustain": false },
            { "direction": "right",  "anim": "BF NOTE RIGHT", "animHold": null, "animRollback": null, "rollback": true, "followHold": false, "fullSustain": false }
        ],

        "miss": [
            { "direction": "left",   "anim": "BF NOTE LEFT MISS",   "stopAfterBeats": 1 },
            { "direction": "down",   "anim": "BF NOTE DOWN MISS",   "stopAfterBeats": 1 },
            { "direction": "up",     "anim": "BF NOTE UP MISS",     "stopAfterBeats": 1 },
            { "direction": "right",  "anim": "BF NOTE RIGHT MISS",  "stopAfterBeats": 1 }
        ],

        "idle": { "anim": "BF idle dance",  "stopAfterBeats": 0, "animHold": null },
        "hey": {  "anim": "BF HEY!!",       "stopAfterBeats": 2, "animHold": null },

        "extras": [
            { "name": "shaking",     "stopAfterBeats": 2,  "anim": null,                "animHold": "BF idle shaking" },
            { "name": "dodge",       "stopAfterBeats": 0,  "anim": "boyfriend dodge",   "animHold": null },
            { "name": "pre-attack",  "stopAfterBeats": 0,  "anim": "bf pre attack",     "animHold": null },
            { "name": "attack",      "stopAfterBeats": 0,  "anim": "boyfriend attack",  "animHold": null},
            { "name": "hit",         "stopAfterBeats": 0,  "anim": "BF hit",            "animHold": null},
            { "name": "dies",        "stopAfterBeats": 0,  "anim": "BF dies",           "animHold": "BF Dead Loop" },
            { "name": "retry",       "stopAfterBeats": 0,  "anim": "BF Dead confirm",   "animHold": null },
            { "name": "giveup",      "stopAfterBeats": 0,  "anim": "BF Dead Loop",      "animHold": null },
            { "name": "static-idle", "stopAfterBeats": 0,  "anim": "BF idle dance",     "animHold": null }
        ]
    }
}

