<AnimationList>

    <AnimationMacro name="menu_item_selected" loop="1">
        <Set property="alpha" value="1.0" />
		<Set property="translateX" value="0" />
    </AnimationMacro>

    <AnimationMacro name="menu_item_idle" loop="1">
		<Set property="translateX" value="-32" />
        <Interpolator type="linear" property="alpha" start="1.0" end="0.7" duration="100" />
    </AnimationMacro>

	<AnimationMacro name="fade-in">
        <Set property="alpha" value="1.0" />
		<Pause duration="100" />
        <Interpolator type="linear" property="alpha" start="1.0" end="0.0" duration="200" />
    </AnimationMacro>

	<AnimationMacro name="fade-out">
		<Pause duration="100" />
        <Interpolator type="linear" property="alpha" start="0.0" end="1.0" duration="200" />
    </AnimationMacro>

</AnimationList>
