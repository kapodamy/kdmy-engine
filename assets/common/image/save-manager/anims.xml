<?xml version="1.0" encoding="utf-8"?>
<AnimationList>
    <AnimationMacro name="transition_outro">
        <Interpolator type="ease-out" property="alpha" start="0.0" end="1.0" duration="250" />
    </AnimationMacro>
    <AnimationMacro name="selected" loop="0">
        <Set property="offsetColorR" value="0.0" />
        <Set property="offsetColorG" value="0.0" />
        <Set property="offsetColorB" value="0.0" />
        <Set property="offsetColorA" value="1.0" />
        <Set property="scaleDirectionX" value="-0.5"/>
        <Set property="scaleDirectionY" value="-0.5"/>
        <Set property="scaleSize" value="1"/>
        <Interpolator type="linear" property="scaleX" start="1.0" end="1.05" duration="1000" />
        <Interpolator type="linear" property="scaleY" start="1.0" end="1.05" duration="1000" />
        <Yield />
        <Interpolator type="linear" property="scaleX" end="1.0" duration="1000" />
        <Interpolator type="linear" property="scaleY" end="1.0" duration="1000" />
    </AnimationMacro>
    <AnimationMacro name="idle">
        <Set property="offsetColorA" value="-1.0" />
    </AnimationMacro>
    <AnimationMacro name="fade-in-background">
        <Interpolator type="linear" property="alpha" start="0.2" end="1.0" duration="200" />
    </AnimationMacro>
    <AnimationMacro name="fade-out-background">
        <Interpolator type="linear" property="alpha" start="1.0" end="0.2" duration="100" />
    </AnimationMacro>
</AnimationList>

