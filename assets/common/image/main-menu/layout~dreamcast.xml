<?xml version="1.0" encoding="utf-8"?>
<Layout width="640" height="480" animationSpeed="1.0" animationList="animations.xml">

    <Font name="font" path="/assets/common/font/vcr.ttf" />

    <!-- This background color should match the color of the background image -->
    <Sprite rgb="0xFDE871">
        <Action>
            <Property name="z" value="0" />
            <Location x="0" y="0" />
            <Size width="640" height="480" />
        </Action>
    </Sprite>
    <Sprite name="background_image" texture="menuBG.png">
        <Action>
            <Property name="z" value="1" />
            <Location x="0" y="0" />
            <Resize maxWidth="640" maxHeight="480" cover="true" center="true" />
        </Action>
    </Sprite>

    <Text name="info-vmu" fontName="font" fontSize="12" color="0xFFFFFF">
        <Action>
            <!-- <String>VMU A1 (savedata loaded)</String> -->
            <Background enable="true" size="2" offsetX="-2" offsetY="0" />
            <BackgroundColor r="0" g="0" b="0" a="0.40" />
            <Location x="2" y="-14" z="2" alignVertical="end" />
        </Action>
    </Text>

    <Text name="info-engine" fontName="font" fontSize="12" color="0xFFFFFF">
        <Action>
            <!-- <String>KDMY Engine version 0.0-r0000</String> -->
            <Background enable="true" size="2" offsetX="-2" offsetY="-2" />
            <BackgroundColor r="0" g="0" b="0" a="0.40" />
            <Location x="2" y="-28" z="3" alignVertical="end" />
        </Action>
    </Text>

    <!-- (false) uses a horizontal list (true) uses a vertical list like Kade Engine -->
    <AttachValue name="menu_isVertical" type="boolean"  value="true" />
    <!-- If the list is vertical this means item height, otherwise, item width -->
    <AttachValue name="menu_itemDimmen" type="float"  value="60" />
    <!-- Scale of the item (use any positive value to ignore "menu_list_itemDimmen")-->
    <AttachValue name="menu_itemScale" type="float"  value="0.0" />
    <!-- If the list is vertical this means padding height, otherwise, padding width -->
    <AttachValue name="menu_itemGap" type="float"  value="24" />
    <!-- Add 48px of padding for a title, something like "Friday Night Funkin: main menu" or similar -->
    <!-- Use "alignVertical" for horizontal lists or "alignHorizontal" for vertical lists -->
    <Placeholder name="menu" x="0" y="48" z="4" width="640" height="432" alignHorizontal="center" />

    <Sprite rgb="0x000000" name="transition_effect" initialAction="intro">
        <Action>
            <Size width="640" height="480" />
            <Location x="0" y="0" />
            <Property name="z" value="5" />
        </Action>
        <Action name="intro">
            <Animation name="transition_intro" />
        </Action>
        <Action name="outro">
            <Animation name="transition_outro" />
        </Action>
    </Sprite>

</Layout>

