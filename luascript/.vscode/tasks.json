{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build WASM (debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make",
                    "wasm-build-debug"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "wasm-build-debug"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "wasm-build-debug"
                ]
            }
        },
        {
            "label": "build WASM (release)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                },
                "command": "mingw32-make",
                "args": [
                    "wasm-build-release"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "wasm-build-release"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "wasm-build-release"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "clean"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "clean"
                ]
            }
        },
        {
            "label": "build windows (debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "windows-build-debug"
                ],
                "presentation": {
                    "clear": true
                }
            }
        }
    ]
}