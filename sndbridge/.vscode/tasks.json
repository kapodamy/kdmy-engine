{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "build-debug-x64"
                ]
            }
        },
        {
            "label": "build (release)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "mingw32-make",
                "args": [
                    "build-release-x64"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "'mingw32-make clean'"
                ]
            }
        }
    ]
}