{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Model",
    "definitions": {
        "Model": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "texture": {
                    "type": "string"
                },
                "atlas": {
                    "type": ["string", "null"],
                    "default": null
                },
                "animlist": {
                    "type": ["string", "null"],
                    "default": null
                },
                "vertexColor": {
                    "type": ["string", "null", "integer"],
                    "default": 0
                }
            },
            "required": [
                "animlist",
                "atlas",
                "texture",
                "vertexColor"
            ],
            "title": "KDMY-Engine 2D Model"
        }
    }
}
